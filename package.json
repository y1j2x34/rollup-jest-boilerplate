{
    "name": "rollup-jest-boilerplate",
    "version": "1.0.0",
    "description": "",
    "private": true,
    "scripts": {
        "test": "lerna exec -- cross-env NODE_ENV=test jest",
        "postinstall": "husky install",
        "release": "standard-version",
        "commit": "commit",
        "lint": "lerna exec -- eslint {src,__test__}/**/*.{js,ts,tsx}",
        "format": "eslint --fix {src,__test__}/**/*.{js,ts,tsx}",
        "build": "lerna exec -- cross-env NODE_ENV=production rollup -c ../../rollup.config.js",
        "gendoc": "lerna exec -- typedoc ./src  --out dist/docs --name rollup-jest-boilerplate --hideGenerator"
    },
    "lint-staged": {
        "{src,test}/**/*.{js,ts,tsx}": [
            "npm run format",
            "git add"
        ]
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/y1j2x34/rollup-jest-boilerplate.git"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@commitlint/cli": "^13.2.1",
        "@commitlint/config-conventional": "^13.2.0",
        "@commitlint/prompt-cli": "^13.2.1",
        "@rollup/plugin-commonjs": "^21.0.0",
        "@rollup/plugin-node-resolve": "^13.0.5",
        "@types/jest": "^27.0.2",
        "@typescript-eslint/eslint-plugin": "^5.1.0",
        "@typescript-eslint/parser": "^5.1.0",
        "codecov": "*",
        "cross-env": "^7.0.3",
        "eslint": "^8.0.1",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "husky": "7.0.2",
        "jest": "^27.3.1",
        "jest-html-reporter": "^3.4.1",
        "lerna": "^4.0.0",
        "lint-staged": "11.2.3",
        "prettier": "^2.4.1",
        "rollup": "^2.58.0",
        "rollup-jest": "^1.1.3",
        "rollup-plugin-terser": "^7.0.2",
        "rollup-plugin-typescript2": "^0.30.0"
    },
    "bugs": {
        "url": "https://github.com/y1j2x34/rollup-jest-boilerplate/issues"
    },
    "homepage": "https://github.com/y1j2x34/rollup-jest-boilerplate#readme"
}
