{
    "compilerOptions": {
        "module": "esnext",
        "moduleResolution": "node",
        "baseUrl": "./",
        "target": "es5",
        "lib": ["esnext", "DOM"],
        "strict": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "alwaysStrict": true,
        "preserveConstEnums": true,
        "removeComments": false,
        "sourceMap": true,
        "importHelpers": true,
        "declaration": true,
        "listFiles": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "typeRoots": [
            "node_modules/@types",
            "src/types"
        ]
    },
    "exclude": ["**/__tests__", "node_modules"]
}
